            <input type="text" id="player_id" name="player_id" value="<%= score.player_id %>"> 
            <br> 
            <label for="team_id">ทีม :</label> 
            <input type="text" id="team_id" name="team_id" value="<%= score.team_id %>"> 
            <br> 
            <input type="submit" value="บันทึกการแก้ไขข้อมูลการทำประตู"> 
        </form> 
        <!-- <a href="/team/<%= team. id %>">View</a>  -->
